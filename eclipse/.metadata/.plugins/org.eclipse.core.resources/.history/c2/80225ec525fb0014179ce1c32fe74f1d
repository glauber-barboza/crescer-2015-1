package ex2_2;

import java.util.ArrayList;
import java.util.HashMap;

import listator.Filme;

public class NetFlox {
	
	ArrayList<String> filme=new ArrayList<String>();
	HashMap<Object,Integer> FilmesJaAssistidos = new HashMap<Object,Integer>();
	
	
	public void reproduzirFilme(Filme filme,Genero tipo){ 
	System.out.println(filme.toString());	
	
	int valordoContador= buscaContadorDeViews(tipo);
	limpaOContador(tipo);
		
	contadorDeViews(tipo, valordoContador++);
	}
	
	public void gerarRelatorio() {
		
		
	}
	private void contadorDeViews(Object valor, int cont){
		FilmesJaAssistidos.put(valor, cont);
	}
	
	
	public int buscaContadorDeViews(Object valor){
		int valorRetornado=0;
		
		try{
		valorRetornado=FilmesJaAssistidos.get(valor);
		}catch(Error e){
			
			valorRetornado=1;
			return valorRetornado;
		}
		
		return valorRetornado;
	}
	
	
	private int limpaOContador(Object valor){
		
		return FilmesJaAssistidos.remove(valor);
	}

}
